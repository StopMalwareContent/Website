---
import Image from "astro/components/Image.astro"
import ExternalLink from "./ExternalLink.astro"
---

<a
  href="https://go.lodine.xyz/smc-firefox"
  target="_blank"
  rel="noopener noreferrer"
>
  <Image
    src="/assets/firefox-badge.webp"
    alt="Get the Add-on"
    width="172"
    height="60"
  /></a
>
<a
  href="https://go.lodine.xyz/smc-chrome"
  target="_blank"
  rel="noopener noreferrer"
>
  <Image
    src="/assets/chrome-badge.webp"
    alt="Available in CWS"
    width="496"
    height="150"
  /></a
>

<style lang="scss">
  a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    border-radius: 5px;
    transition:
      200ms box-shadow,
      100ms transform;

    &:hover {
      box-shadow: 0 0 15px #fff;
    }

    &:active {
      transform: scale(0.8);
    }
  }

  img {
    width: 172px;
    height: 60px;
    object-fit: contain;
    background: #fff;
    border-radius: 5px;
  }
</style>
