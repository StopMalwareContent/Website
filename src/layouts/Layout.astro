---
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {title ? title + " - StopMalwareContent" : "StopMalwareContent"}
    </title>
    <meta
      name="description"
      content="Stop Malware Content is a browser extension that blocks harmful or potentially unwanted websites. Available for Mozilla Firefox and Google Chrome."
    />
    <meta name="theme-color" content="#e43232" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav>
      <a href="/" class="brand">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-triangle-alert"
          ><path
            d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"
          ></path><path d="M12 9v4"></path><path d="M12 17h.01"></path></svg
        >
        <span>StopMalwareContent</span>
      </a>
      <div class="links">
        <a href="/">About</a>
        <a href="/sites">Sites</a>
        <a href="/extension">Extension</a>
      </div>
      <div class="mobileNav hidden">
        <a href="/">About</a>
        <a href="/sites">Sites</a>
        <a href="/extension">Extension</a>
      </div>
      <button class="toggleMobileNav" id="btnToggleMobileNav"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-menu"
          ><line x1="4" x2="20" y1="12" y2="12"></line><line
            x1="4"
            x2="20"
            y1="6"
            y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line></svg
        ></button
      >
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <span
        >Stop Malware Content is open source and licensed under CC-BY-SA-4.0
        license.</span
      >
    </footer>
    <script>
      document
        .getElementById("btnToggleMobileNav")
        ?.addEventListener("click", () => {
          document.querySelector(".mobileNav")?.classList.toggle("hidden")
        })
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    display: flex;
    flex-direction: column;
    height: 100dvh;
    font-family: "Noto Sans", sans-serif;
    background: #0f0f0f;
    color: #fff;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin-bottom: 0.3em;
  }
  p {
    margin-bottom: 0.5em;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    height: 60px;
    padding: 1em;
    border-bottom: 1px solid #535353;
    margin-bottom: 1em;
  }

  nav .brand {
    display: flex;
    align-items: center;
    gap: 0.3em;
    font-size: 1.5em;
    color: #e43232;
    text-decoration: none;
    font-weight: 700;
  }

  nav .links {
    display: flex;
    gap: 0.5em;
  }

  nav .links a {
    text-decoration: none;
    color: #fff;
    border-radius: 5px;
    padding: 0.5em 1em;
  }

  nav .links a:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  @media (max-width: 700px) {
    nav .links {
      display: none;
    }

    .toggleMobileNav {
      display: unset;
    }
  }

  @media (min-width: 700px) {
    .toggleMobileNav {
      display: none;
    }
  }

  .mobileNav {
    position: absolute;
    left: 0;
    top: 60px;
    padding: 1em;
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    backdrop-filter: blur(10px);
  }

  .mobileNav a {
    text-transform: uppercase;
    text-decoration: none;
    width: 100%;
    text-align: center;
    padding: 1em 0.5em;
    border-radius: 5px;
  }

  .mobileNav a:hover {
    background: #e43232;
  }

  .hidden {
    display: none;
  }

  main {
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    padding: 0 1em;
    flex: 1 1 auto;
  }

  a {
    color: #fff;
  }

  button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.3em;
    background: #e43232;
    color: #fff;
    border: none;
    padding: 0.3em 0.5em;
    border-radius: 5px;
    cursor: pointer;
  }

  button:hover {
    opacity: 0.8;
  }

  footer {
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    padding: 1em;
    border-top: 1px solid #535353;
    margin-top: 1em;
    color: #ccc;
    text-align: center;
  }
</style>
